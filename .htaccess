RewriteEngine On
RewriteBase /

# www yönlendirmesini iptal et
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

# LiteSpeed ile uyumluluğu sağla
<IfModule LiteSpeed>
    CacheLookup on
</IfModule>

# Temel kurallar - dosya ve dizin olmayanları kontrol et
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# SEO dostu URL'ler - sade URL'lere öncelik ver
RewriteRule ^login/?$ login.php [L]
RewriteRule ^register/?$ register.php [L]
RewriteRule ^uyeler/?$ uyeler.php [L] 
RewriteRule ^members/?$ uyeler.php [L]
RewriteRule ^profil/?$ profile.php [L]
RewriteRule ^profile/?$ profile.php [L]
RewriteRule ^kategoriler/?$ categories.php [L]
RewriteRule ^hakkimda/?$ hakkimda.php [L]
RewriteRule ^about/?$ hakkimda.php [L]
RewriteRule ^iletisim/?$ iletisim.php [L]
RewriteRule ^contact/?$ iletisim.php [L]
RewriteRule ^makale_ekle/?$ add_article.php [L]
RewriteRule ^add_article/?$ add_article.php [L]
RewriteRule ^makalelerim/?$ makalelerim.php [L]
RewriteRule ^my-articles/?$ makalelerim.php [L]
RewriteRule ^mesajlarim/?$ mesajlarim.php [L]
RewriteRule ^engellenen-kullanicilar/?$ engellenen-kullanicilar.php [L]
RewriteRule ^blocked-users/?$ engellenen-kullanicilar.php [L]

# Slug içeren URL'ler
RewriteRule ^makale/([^/]+)/?$ article.php?slug=$1 [L,QSA]
RewriteRule ^kategori/([^/]+)/([^/]+)/?$ category.php?parent_slug=$1&slug=$2 [L,QSA]
RewriteRule ^kategori/([^/]+)/?$ category.php?slug=$1 [L,QSA]
RewriteRule ^etiket/([^/]+)/?$ etiket.php?tag=$1 [L,QSA]
RewriteRule ^uyeler/([^/]+)/?$ uye.php?username=$1 [L,QSA]

# Güvenlik
Options -Indexes
ServerSignature Off

# GZIP sıkıştırma
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Önbellek kontrolü
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>
